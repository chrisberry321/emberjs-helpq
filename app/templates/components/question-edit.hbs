<p>question-update.hbs</p>

<div>
  <form>
  <h3>Edit Question</h3>
  <div class="form-group">
    <label for="title">Update Title</label>
    {{input class="form-control" value=updatetitle id="updatetitle" placeholder=question.title}}
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    {{input class="form-control" value=updatecontent id="updatecontent" placeholder=question.content}}
  </div>  
  <button class="btn btn-success" {{action 'updateQuestion' question}}>Update</button>
  </form>
</div>